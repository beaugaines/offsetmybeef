%h1= @offset.name

%p= @offset.description

- if @error
  = @error

%p
  Price:
  = formatted_price(@offset.price)

= form_tag buy_path(permalink: @offset.permalink)
  %script.stripe-button{'data-amount' => @offset.price, 'data-description' => @offset.name, 'data-key' => Rails.configuration.stripe[:publishable_key], src: "https://checkout.stripe.com/v2/checkout.js"}